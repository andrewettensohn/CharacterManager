<MudCard Square="false">
    <MudCardContent>
        <MudTextField @bind-Value="ViewModel.NewQuest.Name" Label="Name" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.NewQuest.BriefDescription" Label="Brief Description" Variant="Variant.Outlined" Lines="2" />
        <MudTextField @bind-Value="ViewModel.NewQuest.FullDescription" Label="Full Description" Variant="Variant.Outlined" Lines="10" />
        <MudCheckBox @bind-Checked="ViewModel.NewQuest.IsMainQuest" Label="Is Main Quest" Color="Color.Default"></MudCheckBox>
        <MudCheckBox @bind-Checked="ViewModel.NewQuest.IsComplete" Label="Is Complete" Color="Color.Default"></MudCheckBox>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="ViewModel.AddQuest">Add New Quest</MudButton>
    </MudCardActions>
</MudCard>
<MudExpansionPanels>
    @foreach (Quest quest in ViewModel.QuestList)
    {
        <MudExpansionPanel Text="@quest.Name">
            <MudCard Square="false">
                <MudCardContent>
                    <MudTextField @bind-Value="quest.Name" Label="Name" Variant="Variant.Outlined" />
                    <MudTextField @bind-Value="quest.BriefDescription" Label="Brief Description" Variant="Variant.Outlined" Lines="2" />
                    <MudTextField @bind-Value="quest.FullDescription" Label="Full Description" Variant="Variant.Outlined" Lines="10" />
                    <MudCheckBox @bind-Checked="quest.IsMainQuest" Label="Is Main Quest" Color="Color.Default"></MudCheckBox>
                    <MudCheckBox @bind-Checked="quest.IsComplete" Label="Is Complete" Color="Color.Default"></MudCheckBox>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => ViewModel.UpdateQuest(quest)">Save</MudButton>
                </MudCardActions>
            </MudCard>
        </MudExpansionPanel>
    }
</MudExpansionPanels>


@code {

    [CascadingParameter]
    public ContentInputViewModel ViewModel { get; set; }

}