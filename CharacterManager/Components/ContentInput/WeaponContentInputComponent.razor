<MudCard Square="false">
    <MudCardContent>
        <MudTextField @bind-Value="ViewModel.Weapon.Name" Label="Name" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Weapon.Damage" Label="Damage" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Weapon.AP" Label="AP" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Weapon.Salvo" Label="Salvo" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Weapon.Range" Label="Range" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Weapon.Traits" Label="Traits" Variant="Variant.Outlined" />
        <MudCheckBox @bind-Checked="ViewModel.Weapon.IsMelee" Label="Is Melee" Color="Color.Default"></MudCheckBox>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="ViewModel.AddWeapon">Save</MudButton>
    </MudCardActions>
</MudCard>

@code {

    [CascadingParameter]
    public ContentInputViewModel ViewModel { get; set; }

}