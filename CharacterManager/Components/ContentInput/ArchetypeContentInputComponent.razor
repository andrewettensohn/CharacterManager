<MudCard Square="false">
    <MudCardContent>
        <MudTextField @bind-Value="ViewModel.Archetype.Name" Label="Name" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Archetype.Tier" Label="Required Tier" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Archetype.XPCost" Label="XP Cost" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Archetype.Keywords" Label="Keywords" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Archetype.ArchetypeAbility" Label="Ability" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Archetype.AttributeBonus" Label="Attribute Bonus" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Archetype.SkillBonus" Label="Skill Bonus" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Archetype.Influence" Label="Influence" Variant="Variant.Outlined" />
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="ViewModel.AddArchetype">Save</MudButton>
    </MudCardActions>
</MudCard>

@code {

    [CascadingParameter]
    public ContentInputViewModel ViewModel { get; set; }

}