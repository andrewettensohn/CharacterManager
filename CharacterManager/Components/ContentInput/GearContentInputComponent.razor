<MudCard Square="false">
    <MudCardContent>
        <MudTextField @bind-Value="ViewModel.Gear.Name" Label="Name" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Gear.Description" Label="Description" Variant="Variant.Outlined" Lines="10" />
        <MudTextField @bind-Value="ViewModel.Gear.Keywords" Label="Keywords" Variant="Variant.Outlined" />
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="ViewModel.AddGear">Save</MudButton>
    </MudCardActions>
</MudCard>

@code {

    [CascadingParameter]
    public ContentInputViewModel ViewModel { get; set; }

}