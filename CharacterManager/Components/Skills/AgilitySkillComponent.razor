

<MudCard Square="false" Class="mt-3">
    <MudCardContent>
        <MudTooltip Text="@UserMessages.Tooltips.Ballistic">
            <MudTextField @bind-Value="ViewModel.Character.Skills.Ballistic" Label="Ballistic" ReadOnly="true" Variant="Variant.Outlined" />
        </MudTooltip>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Size="Size.Small" @onclick="async () => await ViewModel.UpdateSkill(nameof(ViewModel.Character.Skills.Ballistic), true)"><MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Small" /></MudButton>
        <MudButton Variant="Variant.Filled" Size="Size.Small" @onclick="async () => await ViewModel.UpdateSkill(nameof(ViewModel.Character.Skills.Ballistic), false)"><MudIcon Icon="@Icons.Material.Filled.Remove" Size="Size.Small" /></MudButton>
    </MudCardActions>
</MudCard>

