<MudGrid Spacing="1" Justify="Justify.Center">
    <MudItem xs="2">
        <MudCard Square="false">
            <MudCardContent>
                <MudTooltip Text="@UserMessages.Tooltips.Toughness">
                    <MudTextField @bind-Value="ViewModel.Character.Attributes.Toughness" Label="Toughness" ReadOnly="true" Variant="Variant.Outlined" />
                </MudTooltip>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Size="Size.Small" @onclick="async () => await ViewModel.UpdateAttribute(nameof(ViewModel.Character.Attributes.Toughness), true)"><MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Small" /></MudButton>
                <MudButton Variant="Variant.Filled" Size="Size.Small" @onclick="async () => await ViewModel.UpdateAttribute(nameof(ViewModel.Character.Attributes.Toughness), false)"><MudIcon Icon="@Icons.Material.Filled.Remove" Size="Size.Small" /></MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>
