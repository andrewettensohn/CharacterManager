<MudCard Square="false" Class="mt-3">
    <MudCardContent>
        <MudTooltip Text="@UserMessages.Tooltips.Awareness">
            <MudTextField @bind-Value="ViewModel.Character.Skills.Awareness" Label="@nameof(ViewModel.Character.Skills.Awareness)" ReadOnly="true" Variant="Variant.Outlined" />
        </MudTooltip>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Size="Size.Small" @onclick="async () => await ViewModel.UpdateSkill(nameof(ViewModel.Character.Skills.Awareness), true)"><MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Small" /></MudButton>
        <MudButton Variant="Variant.Filled" Size="Size.Small" @onclick="async () => await ViewModel.UpdateSkill(nameof(ViewModel.Character.Skills.Awareness), false)"><MudIcon Icon="@Icons.Material.Filled.Remove" Size="Size.Small" /></MudButton>
    </MudCardActions>
</MudCard>

