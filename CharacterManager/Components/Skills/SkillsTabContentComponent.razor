<CascadingValue Value="ViewModel">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12">
            @if (ViewModel.Character.Attributes != null)
            {
                <AttributesComponent />
            }
        </MudItem>
        @if (ViewModel.Character.Skills != null)
        {
            <MudItem xs="2">
                <StrengthSkillComponent />
            </MudItem>
            <MudItem xs="2">
                <AgilitySkillComponent />
            </MudItem>
            <MudItem xs="2">
                <IntellectSkillComponent />
            </MudItem>
            <MudItem xs="2">
                <WillpowerSkillComponent />
            </MudItem>
            <MudItem xs="2">
                <FellowshipSkillComponent />
            </MudItem>
            <MudItem xs="2">
                <InitiativeSkillComponent />
            </MudItem>
        }
    </MudGrid>
</CascadingValue>

@code {
    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }
}

