<CascadingValue Value="ViewModel">
    <MudTabs Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Position="Position.Left">
        <MudTabPanel Text="Combat">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <WeaponActionComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
        <MudTabPanel Text="Skill Checks">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <SkillCheckComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
        <MudTabPanel Text="Quick Reference">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <QuickReferenceComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
</CascadingValue>

@code {
    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }
}
