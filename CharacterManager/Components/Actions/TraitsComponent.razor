    <thead>
        <tr>
            <th>Combait Trait</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (KeyValuePair<string, int> trait in ViewModel.CombatTraits)
        {
            <tr>
                <td>
                    @trait.Key
                </td>
                <td>
                    @trait.Value
                </td>
            </tr>
        }
    </tbody>
</MudSimpleTable>

@code {
    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }
}