<MudCard Square="false" >
    <MudCardContent>
        <MudGrid>
            <MudItem xs="8">
                <MudTextField @bind-Value="ViewModel.Character.CurrentShock" Label="Shock" ReadOnly="true" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="4">
                <MudText>/ @(ViewModel.Character.Attributes.Willpower + ViewModel.Character.Tier)</MudText>
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" @onclick="async () => await Change(true)"><MudIcon Icon="@Icons.Material.Filled.Add" /></MudButton>
        <MudButton Variant="Variant.Filled" @onclick="async () => await Change(false)"><MudIcon Icon="@Icons.Material.Filled.Remove" /></MudButton>
    </MudCardActions>
</MudCard>


@code {

    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }

    private async Task Change(bool increment)
    {
        ViewModel.Character.CurrentShock = increment ? ViewModel.Character.CurrentShock += 1 : ViewModel.Character.CurrentShock -= 1;
        ViewModel.UpdateCharacter();
    }

}
