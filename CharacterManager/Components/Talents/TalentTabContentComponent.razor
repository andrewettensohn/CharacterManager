<CascadingValue Value="ViewModel">
    <MudTabs Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Position="Position.Left">
        <MudTabPanel Text="Archetype">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <ArchetypeComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
        <MudTabPanel Text="Talents">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <TalentListComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
        <MudTabPanel Text="Pyschic Powers">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <PyschicListComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
</CascadingValue>

@code {
    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }
}
