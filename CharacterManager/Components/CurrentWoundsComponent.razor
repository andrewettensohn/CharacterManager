<MudCard Square="false" Class="mt-3">
    @{string maxWoundsLabel = $"Wounds | Max: {ViewModel.Character.Tier * 2 + ViewModel.Character.Attributes.Toughness}";}
    <MudTextField @bind-Value="ViewModel.Character.CurrentWounds" Label="@maxWoundsLabel" ReadOnly="true" Margin="Margin.Dense" Variant="Variant.Outlined" />

    <MudButtonGroup Variant="Variant.Outlined">
        <MudButton Variant="Variant.Outlined" Size="Size.Large" @onclick="() => Change(true)"><MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Medium" /></MudButton>
        <MudButton Variant="Variant.Outlined" Size="Size.Large" @onclick="() => Change(false)"><MudIcon Icon="@Icons.Material.Filled.Remove" Size="Size.Medium" /></MudButton>
    </MudButtonGroup>
</MudCard>


@code {

    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }

    private void Change(bool increment)
    {
        ViewModel.Character.CurrentWounds = increment ? ViewModel.Character.CurrentWounds += 1 : ViewModel.Character.CurrentWounds -= 1;
        ViewModel.UpdateCharacter();
    }

}
