<MudCard Square="false">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="8">
                <MudTextField @bind-Value="ViewModel.Character.CurrentWounds" Label="Wounds" ReadOnly="true" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="4">
                <MudText>/ @(ViewModel.Character.Tier * 2 + ViewModel.Character.Attributes.Toughness)</MudText>
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" @onclick="async () => await Change(true)"><MudIcon Icon="@Icons.Material.Filled.Add" /></MudButton>
        <MudButton Variant="Variant.Filled" @onclick="async () => await Change(false)"><MudIcon Icon="@Icons.Material.Filled.Remove" /></MudButton>
    </MudCardActions>
</MudCard>


@code {

    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }

    private async Task Change(bool increment)
    {
        ViewModel.Character.CurrentWounds = increment ? ViewModel.Character.CurrentWounds += 1 : ViewModel.Character.CurrentWounds -= 1;
        await ViewModel.UpdateCharacter();
    }

}
