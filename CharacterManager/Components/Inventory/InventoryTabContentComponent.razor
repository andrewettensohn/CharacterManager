            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <TalentListComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
        <MudTabPanel Text="Armor">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <TalentManageComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
        <MudTabPanel Text="Gear">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    <TalentManageComponent />
                </MudItem>
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
</CascadingValue>

@code {
    [CascadingParameter]
    public CharacterViewModel ViewModel { get; set; }
}
