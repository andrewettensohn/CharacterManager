@inject CharacterService CharacterService


<input type="text" class="form-control" placeholder="CharacterName" @bind="NewCharacter.Name" />

<CascadingValue Value="NewCharacter.Race">
    <RaceListComponent />
</CascadingValue>

<RaceFormComponent />



@code {

    Character NewCharacter;


    protected override async Task OnInitializedAsync()
    {
        NewCharacter = new Character();
        NewCharacter.Race = new Race();
        await base.OnInitializedAsync();
    }
}
