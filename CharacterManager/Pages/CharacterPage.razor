@page "/characterPage"
@page "/characterPage/{Id:int}"

<CascadingValue Value="_vm">
    <MudPaper>
        <MudGrid>
            <MudItem xs="2">
                <CharacterNameInputComponent />
            </MudItem>
            <MudItem xs="2">
                <CharacterTierInputComponent />
            </MudItem>
            <MudItem xs="2">
                <CharacterXPInputComponent />
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Centered="true">
        <MudTabPanel Text="Actions">
            <MudText>Content Two</MudText>
        </MudTabPanel>
        <MudTabPanel Text="Inventory">
            <MudText>Content Two</MudText>
        </MudTabPanel>
        <MudTabPanel Text="Skills">
            <SkillsTabContentComponent />
        </MudTabPanel>
        <MudTabPanel Text="Talents">
            <MudPaper>
                <TalentTabContentComponent />
            </MudPaper>
        </MudTabPanel>
    </MudTabs>
</CascadingValue>