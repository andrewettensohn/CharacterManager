@page "/characterPage"
@page "/characterPage/{Id}"
<MudGrid Justify="Justify.FlexEnd" Class="mb-2">
    <MudPaper>
        <MudItem>
            <MudLink Href="@("/")" Typo="Typo.h6" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Menu" Size="Size.Large"></MudIcon></MudLink>
        </MudItem>
        <MudItem>
            <MudLink Href="@("contentInputPage")" Typo="Typo.h6" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.AddModerator" Size="Size.Large"></MudIcon></MudLink>
        </MudItem>
    </MudPaper>
</MudGrid>
<CascadingValue Value="_vm">
    <MudGrid Justify="Justify.SpaceAround">
        <MudItem xs="3">
            <MudCard>
                <CharacterNameInputComponent />
                <CharacterTierInputComponent />
            </MudCard>
        </MudItem>
        <MudItem xs="2">
            <CharacterXPInputComponent />
        </MudItem>
        <MudItem xs="2">
            <RankInputComponent />
        </MudItem>
    </MudGrid>
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12">
            <MudTabs Rounded="false" Centered="true" PrevIcon="@Icons.Filled.SkipPrevious" NextIcon="@Icons.Filled.SkipNext">
                <MudTabPanel Text="Actions">
                    <ActionTabContentComponent />
                </MudTabPanel>
                <MudTabPanel Text="Inventory">
                    <MudPaper>
                        <InventoryTabContentComponent />
                    </MudPaper>
                </MudTabPanel>
                <MudTabPanel Text="Skills">
                    <SkillsTabContentComponent />
                </MudTabPanel>
                <MudTabPanel Text="Talents">
                    <MudPaper>
                        <TalentTabContentComponent />
                    </MudPaper>
                </MudTabPanel>
                <MudTabPanel Text="Faction">
                    <MudPaper>
                        <FactionTabContentComponent />
                    </MudPaper>
                </MudTabPanel>
            </MudTabs>
        </MudItem>
    </MudGrid>
</CascadingValue>