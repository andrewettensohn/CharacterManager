@page "/characterPage"
@page "/characterPage/{Id:int}"

<CascadingValue Value="_vm">
    <MudPaper>
        <MudGrid>
            <MudItem xs="2">
                <CharacterNameInputComponent />
            </MudItem>
            <MudItem xs="2">
                <CharacterTierInputComponent />
            </MudItem>
            <MudItem xs="2">
                <CharacterXPInputComponent />
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Centered="true">
        <MudTabPanel Text="Actions">
            <MudText>Content Two</MudText>
        </MudTabPanel>
        <MudTabPanel Text="Inventory">
            <MudText>Content Two</MudText>
        </MudTabPanel>
        <MudTabPanel Text="Skills">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12">
                    @if (_vm.Character.Attributes != null)
                    {
                        <AttributesComponent />
                    }
                </MudItem>
                @if (_vm.Character.Skills != null)
                {
                    <MudItem xs="2">
                        <StrengthSkillComponent />
                    </MudItem>
                    <MudItem xs="2">
                        <AgilitySkillComponent />
                    </MudItem>
                    <MudItem xs="2">
                        <IntellectSkillComponent />
                    </MudItem>
                    <MudItem xs="2">
                        <WillpowerSkillComponent />
                    </MudItem>
                    <MudItem xs="2">
                        <FellowshipSkillComponent />
                    </MudItem>
                    <MudItem xs="2">
                        <InitiativeSkillComponent />
                    </MudItem>
                }
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
</CascadingValue>